<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">
            <div class="col-sm-12 col-xs-12" style="padding:20px 0;">
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <h3 style="font-size:20px; padding-top: 10px;">Area Detail</h3>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <button type="button" class="btn btn-primary pull-right" value="AddNew" id="btnAddPage">Add New Area</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-xs-12" style="padding: 0px;">
                <div class="table-responsive" style="padding:10px 0 50px 0;">
                    <table class="table table_css_main_cl table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th class="text-center">Area Id</th>
                                <th class="text-center">Area Name</th>
                                <th class="text-center">Active</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
